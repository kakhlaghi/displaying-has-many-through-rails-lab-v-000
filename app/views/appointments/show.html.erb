<h2>Doctor <%=@appointment.doctor.name%></h2>
<h2>Patient <%=@appointent.doctor.department%></h2>

<p>Appointments: <%@doctor.appointments.each do |appt| %>
  <%= appt.appointment_datetime.strftime("%B %d, %G at %R") %>
  <a href="/patients/<%=appt.patient_id%>"><%=appt.patient.name%></a>
<%end%></p>
